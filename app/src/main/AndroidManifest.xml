<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.GromkiVopros"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".screens.StartAnimationActivity"
            android:exported="false" />
        <activity
            android:name=".screens.CorrectAnswerActivity"
            android:exported="false" />
        <activity
            android:name=".screens.CheckAnswerActivity"
            android:exported="false" />
        <activity
            android:name=".screens.WaitForStartActivity"
            android:exported="false" />
        <activity
            android:name=".screens.GameActivity"
            android:exported="false" />
        <activity
            android:name=".screens.GameRulesActivity"
            android:exported="false" />
        <activity
            android:name=".screens.JoinRoomActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".screens.CreateRoomActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".screens.MainActivity"
            android:exported="false" />
        <activity
            android:name=".screens.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>