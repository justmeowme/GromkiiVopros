<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".screens.CheckAnswerActivity">

    <TextView
        android:id="@+id/textView_questionNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:fontFamily="@font/jura_bold"
        android:text="1 вопрос"
        android:textColor="@color/white"
        android:textSize="26sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/checkAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:text="Узнать ответ"
        android:textAllCaps="false"
        android:fontFamily="@font/jura_bold"
        android:textSize="26sp"
        android:paddingVertical="18dp"
        android:background="@drawable/button_green"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/button_green"
        android:fontFamily="@font/jura_bold"
        android:paddingVertical="18dp"
        android:text="Далее"
        android:visibility="invisible"
        android:textAllCaps="false"
        android:textSize="26sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkAnswer" />
</androidx.constraintlayout.widget.ConstraintLayout>